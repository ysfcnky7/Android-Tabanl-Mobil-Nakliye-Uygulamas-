<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nereden *"
                android:textColor="#372c24" />

            <!-- <EditText
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:layout_marginTop="5dip"
                 android:id="@+id/editTextNereden"
                 android:background="@drawable/textbox"

                 android:singleLine="true" /> -->

            <Spinner
                android:id="@+id/spinnerNereden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nereye *"
                android:textColor="#372c24" />

            <Spinner
                android:id="@+id/spinnerNereye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox" />
            <!-- <EditText
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:layout_marginTop="5dip"
                 android:id="@+id/editTextNereye"
                 android:background="@drawable/textbox"
                 android:singleLine="true" /> -->

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Araç Bilgisi *"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/editTextAracBilgisi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/textbox"

                android:singleLine="true" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tarih *"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/editTextTarih"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/textbox"

                android:singleLine="true" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Açiklama"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/editTextAcikalam"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/textbox"

                android:singleLine="true" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fiyat *"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/editTextFiyat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dip"
                android:background="@drawable/textbox"
                android:inputType="number"

                android:singleLine="true" />

            <Button
                android:id="@+id/buttonOlustur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/button"
                android:text="İlan Oluştur" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>